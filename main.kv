#: import Window kivy.core.window.Window

MDBoxLayout:
    MDNavigationRail:
        id: navigation_rail
        MDNavigationRailItem:
            text: "Home"
            icon: "home"
            on_release: app.switch_screen('home')
        MDNavigationRailItem:
            text: "Download"
            icon: "file-download"
            on_release: app.switch_screen('download')
        MDNavigationRailItem:
            text: "My Files"
            icon: "folder"
            on_release: app.switch_screen('my_files')
        # MDNavigationRailItem:
        #     text: "Edit"
        #     icon: "tune"
        #     on_release:
        #         app.manager.current = 'edit'

    ScreenManager:
        id: screen_manager

<HomeScreen>:

<DownloadScreen>:
    MDBoxLayout:
        id: box
        orientation: "vertical"
        MDTopAppBar:
            title: "Download image files from NASA"
        MDBoxLayout:
            id: content
            orientation: "vertical"
            padding: dp(30)
            MDLabel:
                text: "Please enter the url, name (case-insensitive), or product id of image"
                font_size: 20
                size_hint: 1, 0.1
            MDTextField:
                # padding: dp(15), dp(15)
                id: text_field
                hint_text: "Image url, name (case-insensitive), or product id"
                size_hint: 0.8, None
                width: dp(10)
                # required: True
                # multiline: False
                font_size: 14
                on_focus: root.check_resource()
                on_text_validate: root.check_resource()
                helper_text_mode: "on_error"
            MDBoxLayout:
                id: btn_box
                spacing: dp(10)
                size_hint: 0.8, 0.05
                orientation: "horizontal"
                MDRectangleFlatIconButton:
                    id: preview_resource_btn
                    padding: dp(10), dp(10)
                    icon: "eye"
                    text: "Preview resource"
                    disabled: True
                    on_press:
                        root.show_preview_dialog()
                MDRectangleFlatIconButton:
                    id: download_resource_btn
                    padding: dp(10), dp(10)
                    icon: "download"
                    text: "Download resource"
                    disabled: True
                    on_press:
                        root.show_download_dialog()
            MDLabel:
                markup: True
                text:
                    ("Examples:\n"
                    "(url) https://www.missionjuno.swri.edu/junocam/"
                    "[color=#f00]processing?id=[/color]13796\n"
                    "(name) JUPITER PJ44 SOUTH TEMPERATE BELT\n"
                    "(name) PJ45 Folded Filametary Region\n"
                    "(product id) JNCE_2022272_45C00071_V01")
                font_name: "Consola"
                font_size: 14
                size_hint: 1, 0.2

<ResourceItem>
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    ripple_behavior: True
    elevation: 3
    on_press: app.select_resource(self.resource_dir)

    FitImage:
        id: image
        # source: None
        radius: root.radius
        size_hint_x: None
        width: root.height

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: "6dp"
        padding: "12dp", 0, 0, 0
        pos_hint: {"center_y": .5}

        MDLabel:
            id: title
            # text: "Title text"
            font_style: "H5"
            bold: True
            adaptive_height: True

        MDLabel:
            id: subtitle
            # text: "Subtitle text"
            theme_text_color: "Hint"
            adaptive_height: True

<MyFilesScreen>:
    MDSliverAppbar:
        background_color: "2d4f50"
        max_height: Window.height / 3
        MDSliverAppbarHeader:
            FitImage:
                source: "wutopia.png"
        MDSliverAppbarContent:
            id: content
            orientation: "vertical"
            padding: "12dp"
            spacing: "12dp"
            adaptive_height: True

<BasicAdjustmentsTab>:
    icon: "tune"
    title: "Basic adjustments"

    MDBoxLayout:
        id: adjustments_box
        orientation: "vertical"
        padding: dp(10)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.2
            Line:
                width: dp(2)
                rectangle: self.x, self.y, self.width, self.height

        # MDBoxLayout:
        #     spacing: dp(5)
        #     MDIcon:
        #         icon: "tune"
        #         pos_hint: {"center_x": .5, "center_y": .5}
        #     MDLabel:
        #         font_style: "H6"
        #         text: "Basic adjustments"
        MDLabel:
            id: note
            text: "Note: The saturation of these images has already been cranked up in the default post-processing pipeline, so increasing the saturation in this panel may not produce significant visual changes. Feel free to try to decrease the saturation instead."
            font_style: "Caption"

<FilterTile>
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_color: 1, 1, 1, 0.3
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint_y: None
    height: dp(120)

    MDLabel:
        id: label
        bold: True
        color: 0, 0, 0, 1

<FiltersTab>:
    icon: "image-filter-center-focus"
    title: "Filters"
    MDGridLayout:
        id: grid
        adaptive_height: True
        padding: dp(10)
        spacing: dp(5)
        cols: 3

<EditScreen>:
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            # title: "MDTopAppBar"
            left_action_items: [["arrow-left", lambda x: app.switch_screen('my_files'), "Back to My Files"]]
            right_action_items: [["content-save", lambda x: app.save_dialog(), "Save"],["share", lambda x: app.share_dialog(), "Upload to Imgur"]]

        MDBoxLayout:
            MDBoxLayout:
                padding: dp(20)
                Image:
                    id: image
            MDTabs:
                on_tab_switch: app.on_tab_switch(*args)
                lock_swiping: True
                BasicAdjustmentsTab:
                    id: basic_adjustments_tab
<Module3DItem>
    size_hint_y: None
    height: "86dp"
    padding: "4dp"
    radius: 12
    ripple_behavior: True
    elevation: 3
    on_press: app.select_resource_module(self.resource_dir)

    FitImage:
        id: module_image
        # source: None
        radius: root.radius
        size_hint_x: None
        width: root.height

    MDBoxLayout:
        orientation: "vertical"
        adaptive_height: True
        spacing: "6dp"
        padding: "12dp", 0, 0, 0
        pos_hint: {"center_y": .5}

        MDLabel:
            id: module_title
            # text: "Title text"
            font_style: "H5"
            bold: True
            adaptive_height: True

        MDLabel:
            id: module_subtitle
            # text: "Subtitle text"
            theme_text_color: "Hint"
            adaptive_height: True

<Module3D>:
    MDBoxLayout:
        MDSliverAppbar:
            background_color: "00004d"
            max_width: Window.width *0.3
            height: Window.height
            MDSliverAppbarHeader:
                MDBoxLayout:

                    MDLabel:
                        font_style: 'H4'
                        text: 'Choose Your File'
            MDSliverAppbarContent:
                id: module_content
                orientation: "vertical"
                padding: "12dp"
                spacing: "12dp"
                adaptive_height: True
        MDBoxLayout:
            size_hint_x: None
            width: dp(300)
            orientation: 'vertical'
            md_bg_color: 0, 0, 0, 0.6
            spacing:dp(10)


            MDLabel:
                opposite_colors: True
                size_hint: 0.9,0.3
                pos_hint: {"center_x": .5, "y":0.1}
                text: 'Index of Magnetic 3D Module'
                font_size: dp(20)
            MDLabel:
                opposite_colors: True
                size_hint: 0.9,0.3
                font_style: 'Subtitle1'
                pos_hint: {"x": .1, "y":0.3}
                text: 'External shell(s)'
            MDSlider:
                size_hint: 1,0.3
                max: 2
                min: 0
                pos_hint: {"x": .01, "y":0.3}
                hint: True
                id: external_shell
            MDLabel:
                opposite_colors: True
                size_hint: .9,0.3
                pos_hint: {"x": .1, "y":0.3}
                font_style: 'Subtitle1'
                text: 'Layers'
            MDSlider:
                size_hint: 1,0.3
                max: 10
                min: 1
                pos_hint: {"x": .01, "y":0.3}
                hint: True
                id: layers
            MDFlatButton:
                opposite_colors: True
                size_hint: 1,2
                pos_hint: {"center_x": .5 ,"center_y": .5 }
                text: 'Start 3D Module'
                font_style: 'H5'
                on_release: root.start_generate()
